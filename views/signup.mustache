<html>

<head>
	{{> heads}}
	<title>Welcome to Subs</title>
</head>

<body>
	{{!-- header includes error reporting --}}
	{{> header}}
	<!--recieve //id title body owner from sqlRoute.js-->


	{{^errReason}}
	<p>Sign up for a new account</p>
	<form method="post" action="account/signup">
		<div class="TinputDiv">
			<label for="email">Email</label><br>
			<input type="email" value="test@test.com" name="email"><br>
			<h class="inputDis">Private and safe from spam.</h><br><br>
		</div>

		<div class="TinputDiv">
			<label for="password">Password</label><br>
			<input type="password" value="12342" name="password"><br>
			<h class="inputDis">Your password is always secure</h><br><br>
		</div>


		<input type="hidden" name="action" value="signUp">
		<button class="cta"><span class="material-icons-two-tone md-light">account_box</span> Sign Up</button>
	</form>
	<br>
	<a href="login" class="smallTxt">Already have an account? Login here</a>
	{{/errReason}}
</body>

</html>