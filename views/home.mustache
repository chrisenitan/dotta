<html lang="en">

<head>
	{{> heads}}
	<title>Welcome to Subs</title>
</head>

<body>
	<!--recieve //id title body owner from sqlRoute.js-->

	{{!-- add new event --}}
	{{> addPanel}}

	{{!-- Page nav head --}}
	{{> navHeader}}
	{{> header}}
	{{#pageRequest}}
	We have a request to show confirmation for... wip
	{{/pageRequest}}

	{{^errReason}}
	<p>Your Subscriptions</p>
	{{#subs}}
	<div class="subsHolder" style="background-color: {{colour}};">
		<h class="subCost">{{currency}}{{cost}}</h><br><br>
		<h class="subTxt">in: {{daysRemaining}} days</h><br><br>
		<a href="sub/{{ref}}">
			<h class="subName">{{name}}
		</a><br>

	</div>
	{{/subs}}

	{{!-- when user has no subs yet --}}
	{{^subs}}
	<div id="pageContainer">
		<div class="subsHolder">
			<h class="subCost">$40</h><br><br>
			<h class="subTxt">in: 28 days</h><br><br>
			<a href="/{{username}}">
				<h class="subName">Sample
			</a><br>
		</div><br><br>

		Your account seems brand new<br><br>
		Looks like you haven't recorded any subscriptions<br><br>
		Start by creating one with the<br>
		<b>"+ New Subscription"</b> button up there
	</div>
	{{/subs}}




	<br><br><br>
	{{/errReason}}


</body>

</html>